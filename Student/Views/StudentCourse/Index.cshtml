@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Enrolled Courses";
}
<div class="d-flex justify-content-between align-items-center mb-0 p-3 rounded-top bg-body-secondary">
    <h2>Enrollments List</h2>
    <a class="btn btn-success" asp-controller="Student" asp-action="Index">
        Enrollment A Course
        <span class="badge text-bg-warning mx-1">@Model.Count()</span>
    </a>
</div>
<table class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Email</th>
            <th>Enrolled Courses</th>
            <th>Enrolled At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student.StudentId</td>
                <td>@item.Student.FullName</td>
                <td>@item.Student.Email</td>
                <td>
                    <ul class="list-unstyled mb-0">
                        @foreach (var course in item.Courses)
                        {
                            <li class="badge bg-secondary me-1 mb-1">@course.CourseName</li>
                        }
                    </ul>
                </td>
                <td>
                    @item.EnrolledAt
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Enrollment" asp-route-studentId="@item.Student.StudentId">Edit Courses</a>
                </td>
            </tr>
        }
    </tbody>
</table>
