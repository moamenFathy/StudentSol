@model StudentSystem_Model.Models.Student
@{
    ViewData["Title"] = "Create Student";
}

<!DOCTYPE HTML>
<html>
<head>
    <title></title>
</head>
<body>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (Model.StudentId != 0)
    {
        ViewData["Title"] = "Edit Student";
    }

    <form method="post">
        <input type="hidden" asp-for="@Model.StudentId" />
        <div class="mt-3">
            <label asp-for="@Model.FirstName" class="form-label">FirstName</label>
            <input asp-for="@Model.FirstName" type="text" placeholder="Enter Your First Name" class="form-control" />
            <span asp-validation-for="@Model.FirstName" class="text-danger fw-bold"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.LastName" class="form-label">LastName</label>
            <input asp-for="@Model.LastName" type="text" placeholder="Enter Your Last Name" class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-danger fw-bold"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.Email" class="form-label">Email</label>
            <input asp-for="@Model.Email" type="email" placeholder="Enter Your Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger fw-bold"></span>
        </div>

        <div class="d-flex justify-content-end w-100 mt-3 gap-3">
            @if (Model.StudentId != 0)
            {
                <button type="submit" class="btn btn-success">Update</button>
            }
            else
            {
                <button type="submit" class="btn btn-success">Create</button>
            }
            <button asp-controller="Student" asp-action="Index" class="btn btn-primary">Back To List</button>
        </div>
    </form>
</body>
</html>