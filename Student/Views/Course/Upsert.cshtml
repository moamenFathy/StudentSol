@model StudentSystem_Model.Models.Course
@{
    ViewData["Title"] = "Create Course";
}

<!DOCTYPE HTML>
<html>
<head>
    <title></title>
</head>
<body>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (Model.CourseId != 0)
    {
        ViewData["Title"] = "Edit Course";
    }

    <form method="post">
        <input type="hidden" asp-for="@Model.CourseId" />
        <div class="mt-3">
            <label asp-for="@Model.CourseName" class="form-label">Course Name</label>
            <input asp-for="@Model.CourseName" type="text" placeholder="Enter Your Course Name" class="form-control" />
            <span asp-validation-for="@Model.CourseName" class="text-danger fw-bold"></span>
        </div>
        <div class="mt-3">
            <label asp-for="@Model.CoursePrice" class="form-label">CoursePrice</label>
            <input asp-for="@Model.CoursePrice" type="text" placeholder="Enter Your Course Price" class="form-control" />
            <span asp-validation-for="@Model.CoursePrice" class="text-danger fw-bold"></span>
        </div>

        <div class="d-flex justify-content-end w-100 mt-3 gap-3">
            @if (Model.CourseId != 0)
            {
                <button type="submit" class="btn btn-success">Update</button>
            }
            else
            {
                <button type="submit" class="btn btn-success">Create</button>
            }
            <a asp-controller="Course" asp-action="Index" class="btn btn-primary">Back To List</a>
        </div>
    </form>
</body>
</html>