@using Microsoft.AspNetCore.Http
@{
    var adminId = Context.Session.GetInt32("adminId");
    var adminName = Context.Session.GetString("adminName");
}
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill"></i> Student Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        @if (adminId != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Student" asp-action="Index">
                                    <i class="bi bi-people"></i> Students
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Course" asp-action="Index">
                                    <i class="bi bi-book"></i> Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="StudentCourse" asp-action="Index">
                                    <i class="bi bi-journal-bookmark"></i> Enrollments
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (adminId == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="user-info">
                                    <i class="bi bi-person-circle"></i> @adminName
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="text-center">
        <div class="container">
            <p class="mb-0">
                <i class="bi bi-mortarboard-fill"></i> &copy; @DateTime.Now.Year Student Management System - All Rights Reserved
            </p>
            <small>
                <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a> | 
                <a href="#">Terms of Service</a>
            </small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
