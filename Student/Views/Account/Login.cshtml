@model StudentSystem_Model.ViewModel.LoginVm
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-header card-header-gradient text-white text-center py-4">
                <i class="bi bi-shield-lock fs-1"></i>
                <h3 class="mb-0 mt-2">Welcome Back</h3>
                <p class="mb-0 text-white-50">Sign in to your account</p>
            </div>
            <div class="card-body p-5">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                }
                
                <form method="post" asp-action="Login">
                    <div class="mb-4">
                        <label for="Email" class="form-label fw-bold">
                            <i class="bi bi-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" 
                               type="email" 
                               class="form-control form-control-lg" 
                               placeholder="Enter your email" 
                               autofocus />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label for="Password" class="form-label fw-bold">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <div class="input-group">
                            <input asp-for="Password" 
                                   type="password" 
                                   class="form-control form-control-lg pass-input" 
                                   placeholder="Enter your password" />
                            <button class="btn btn-outline-secondary show-pass" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Sign In
                        </button>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Don't have an account? 
                            <a asp-action="Register" class="text-decoration-none fw-bold">Create one</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
