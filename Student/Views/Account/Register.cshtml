@model StudentSystem_Model.ViewModel.RegisterVm
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-header card-header-gradient text-white text-center py-4">
                <i class="bi bi-person-plus-fill fs-1"></i>
                <h3 class="mb-0 mt-2">Create Account</h3>
                <p class="mb-0 text-white-50">Join our student management system</p>
            </div>
            <div class="card-body p-5">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                }
                
                <form asp-action="Register" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="FirstName" class="form-label fw-bold">
                                <i class="bi bi-person"></i> First Name
                            </label>
                            <input asp-for="FirstName" 
                                   class="form-control form-control-lg" 
                                   placeholder="John" 
                                   autofocus />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label asp-for="LastName" class="form-label fw-bold">
                                <i class="bi bi-person"></i> Last Name
                            </label>
                            <input asp-for="LastName" 
                                   class="form-control form-control-lg" 
                                   placeholder="Doe" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-bold">
                            <i class="bi bi-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" 
                               type="email" 
                               class="form-control form-control-lg" 
                               placeholder="john.doe@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-bold">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <div class="input-group">
                            <input asp-for="Password" 
                                   type="password" 
                                   class="form-control form-control-lg pass-input" 
                                   placeholder="Enter a strong password" />
                            <button class="btn btn-outline-secondary show-pass" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold">
                            <i class="bi bi-lock-fill"></i> Confirm Password
                        </label>
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" 
                                   type="password" 
                                   class="form-control form-control-lg pass-input" 
                                   placeholder="Re-enter your password" />
                            <button class="btn btn-outline-secondary show-pass" type="button">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i> Create Account
                        </button>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Already have an account? 
                            <a asp-action="Login" class="text-decoration-none fw-bold">Sign in</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
